<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <android.support.constraint.Guideline
        android:id="@+id/gl_start_1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.22"/>

    <TextView
        android:id="@+id/tvanswer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/bg_orange"
        android:gravity="center"
        android:paddingStart="30dp"
        android:paddingEnd="8dp"
        android:text="الاجايةالاجايةالاجايةالاجايةالاجايةالاجايةالاجايةالاجايةالاجايةالاجايةالاجايةالاجايةالاجاية"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/gl_start_1"
        app:layout_constraintHeight_percent="0.90"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.constraint.Guideline
        android:id="@+id/gl_bottom"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.95"/>

    <android.support.constraint.Guideline
        android:id="@+id/gl_start"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.3"/>

    <RadioButton
        android:id="@+id/radioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_radio"
        android:button="@null"
        android:gravity="center"
        app:layout_constraintEnd_toStartOf="@id/gl_start"
        app:layout_constraintBottom_toTopOf="@id/gl_bottom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>