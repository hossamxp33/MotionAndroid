<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".QuizExplainActivity">

    <android.support.constraint.Guideline
        android:id="@+id/guideline1"

        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.04"
        />

    <ImageView
        android:id="@+id/iv_company_logo"

        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerInside"

        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guideline1"
        app:layout_constraintWidth_percent="0.6"
        app:srcCompat="@drawable/hay3rd" />

    <ImageView
        android:id="@+id/iv_logo"

        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"

        android:scaleType="centerInside"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toEndOf="@+id/iv_company_logo"
        app:layout_constraintTop_toBottomOf="@id/guideline1"
        app:layout_constraintWidth_percent="0.3"
        app:srcCompat="@drawable/logo" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline2"

        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.2"
        />

    <TextView
        android:id="@+id/tvmoq"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="شرح الاختبار"
        android:textColor="@color/darkgreytext"
        android:textSize="30sp"


        android:textStyle="bold"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guideline2"
        app:layout_constraintWidth_percent="0.4" />

    <TextView
        android:id="@+id/tvsh"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:gravity="center"
        android:text="شرح الاختبارشرح الاختبارشرح الاختبارشرح الاختبارشرح الاختبارشرح الاختبارشرح الاختبارشرح الاختبارشرح الاختبارشرح الاختبار"


        android:textColor="@color/darkgreytext"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvmoq"
        app:layout_constraintWidth_percent="0.8" />

    <TextView
        android:id="@+id/tvmoq2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="النقطة الأولى"
        android:textColor="@color/orangetext"
        android:textSize="30sp"


        android:textStyle="bold"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvsh"
        app:layout_constraintWidth_percent="0.4" />

    <TextView
        android:id="@+id/tvsh2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:gravity="center"
        android:text="شرح الاختبارشرح الاختبارشرح الاختبارشرح الاختبارشرح الاختبارشرح الاختبارشرح الاختبارشرح الاختبارشرح الاختبارشرح الاختبار"


        android:textColor="@color/darkgreytext"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvmoq2"
        app:layout_constraintWidth_percent="0.8" />

    <TextView
        android:id="@+id/tvmoq3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="ثانيا  "
        android:textColor="@color/orangetext"
        android:textSize="30sp"


        android:textStyle="bold"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvsh2"
        app:layout_constraintWidth_percent="0.4" />

    <TextView
        android:id="@+id/tvsh3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:gravity="center"
        android:text="شرح الاختبارشرح الاختبارشرح الاختبارشرح الاختبارشرح الاختبارشرح الاختبارشرح الاختبارشرح الاختبارشرح الاختبارشرح الاختبار"


        android:textColor="@color/darkgreytext"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvmoq3"
        app:layout_constraintWidth_percent="0.8" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline3"

        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.85"
        />

    <android.support.constraint.Guideline
        android:id="@+id/guideline4"

        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.17"
        />
    <ImageView
        android:id="@+id/line"
        android:layout_width="0dp"
        android:layout_height="3dp"
        android:background="@drawable/line"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@id/guideline4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.75"
        app:srcCompat="@drawable/line" />

    <android.support.v7.widget.AppCompatImageButton
        android:id="@+id/btnGoRegister"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerInside"
        android:background="?android:selectableItemBackground"
        android:src="@drawable/next"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintTop_toBottomOf="@+id/guideline3"
        app:layout_constraintWidth_percent="0.4" />

</android.support.constraint.ConstraintLayout>